<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_claim_history"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="3dp"
    android:background="@color/background">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tv_claim_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#828282"
                android:text="Claim Number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"
                android:padding="5dp"
                />
        <TextView
            android:id="@+id/tv_proses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Proses"
            android:backgroundTint="#f4b459"
            app:layout_constraintLeft_toLeftOf="@id/tv_claim_number"
            app:layout_constraintTop_toBottomOf="@id/tv_claim_number"
            tools:ignore="NotSibling"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:background="@drawable/round_button"
            />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#b71c1c"
            android:text="1234567890"
            app:layout_constraintLeft_toRightOf="@id/tv_claim_number"
            app:layout_constraintTop_toTopOf="@id/tv_claim_number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:id="@+id/menu"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>