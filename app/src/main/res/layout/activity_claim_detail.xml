<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ClaimDetail">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/merahBata"
        android:id="@+id/toolbar_add"
        app:title=""
        >

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Claim Details"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/layout_atas"
        app:layout_constraintTop_toBottomOf="@id/toolbar_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#828282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim Number"
           android:textAlignment="textEnd"
            android:layout_weight="1"
            android:padding="10dp"
            />
        <TextView
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#b71c1c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13325346436"
            android:textAlignment="textStart"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_atas"
        android:orientation="vertical"
        android:id="@+id/layout_bawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
 <ExpandableListView
     android:id="@+id/ex_list"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

 </ExpandableListView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
